<project name="JPetStore" default="startap">
<property name="tomcatbin" value="D:\DevOps\apache-tomcat-7.0.56\bin"/>
<property name ="srce" value="C:\Program Files (x86)\Jenkins\jobs\azuretest\workspace\build\wars"/>
<property name ="cop" value="D:\DevOps\apache-tomcat-7.0.56\webapps"/>

<target name="stopap">
<exec executable="cmd.exe">
		<arg value ="/c" />
		<arg value = "shutdown.bat"/>
	</exec>
	<sleep seconds="10"/>
</target>

<target name="deploywar" depends="stopap">
	<copy todir = "${cop}">
      <fileset dir="${srce}"/>
	</copy>
	<sleep seconds="10"/>
</target>

<target name="startap" depends="deploywar">
	<exec executable="cmd.exe">
		<arg value ="/c" />
		<arg value = "startup.bat"/>
	</exec>
	<sleep seconds="20"/>
	</target>
	
</project>
